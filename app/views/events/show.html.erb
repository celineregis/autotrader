<div class="container-fluid">
	<div class="row">
		
		<div class="col-md-6" id="score-holder">
			<div class="row card-banner">	
				<h4><%="#{@event.league.group} - #{@event.league.name}"%></h4>
			</div>
			<div class="row" id=teams-score>	
				<div class="col-md-5">	
					<h2><%=@event.home%></h2>
				</div>
				<div class="col-md-2">	
					<h1 style='color:black'>2-1</h1>
				</div>
				<div class="col-md-5">	
					<h2><%=@event.away%></h2>
				</div>
			</div>
			<div class="row" id="playing-minute">
				<div class="progress">
	  				<div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="90" style="width:20%">
	    				'18 Minute
	 				</div>
				</div>
			</div>
		</div>
		<div class="col-md-6" id="simulation-settings">
			<div class="row card-banner">	
				<h4>Settings</h4>
			</div>
			<div class="row" id=settings-content>	
				<div class="col-md-4">	
					<span>	
						<h4> Style 
							<select class="form-control">
		  						<option>Marketing</option>
		 		 			    <option>Profit</option>
		  					 	<option>Danger</option>
							</select>
						</h4>
					</span>
					
				</div>
						
			</div>
		</div>

	</div>	
</div>